<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dany.phonebook.views.SelectCountryActivity">
    <ImageView
        android:id="@+id/image_view_planet"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/planet"/>
    <TextView
        android:id="@+id/text_view_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_planet"
        android:text="@string/select_country"
        android:textSize="40sp"
        android:textColor="@color/blue"
        android:fontFamily="cursive"
        android:gravity="center"/>
    <EditText
        android:id="@+id/edit_text_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_header"
        android:layout_margin="20dp"
        android:minHeight="40dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:hint="@string/enter_country"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:drawableEnd="@drawable/blue_search_icon"
        android:background="@drawable/white_rounded_rectangle"/>
    <ListView
        android:id="@+id/list_view_countries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_search"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:divider="@color/gradient_end"
        android:dividerHeight="1dp"/>
</RelativeLayout>
